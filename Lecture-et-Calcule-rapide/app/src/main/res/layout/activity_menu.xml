<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ardoise"
    tools:context="com.projet4a.ensim.lecture_et_calcule_rapide.Menu.MenuActivity">

    <com.cpiz.android.bubbleview.BubbleTextView
        android:id="@+id/bulle1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="30dp"
        android:autoText="false"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:text="Bienvenue!"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:bb_arrowDirection="Right"
        app:bb_arrowHeight="20dp"
        app:bb_arrowWidth="20dp"
        app:bb_borderColor="@android:color/white"
        app:bb_borderWidth="3dp"
        app:bb_cornerRadius="30dp"
        app:bb_fillColor="@color/zxing_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textLecture"
        app:layout_constraintTop_toBottomOf="@+id/textLecture" />

    <com.cpiz.android.bubbleview.BubbleTextView
        android:id="@+id/bulle2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:text="Choisis une matiÃ¨re."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:bb_arrowDirection="Right"
        app:bb_arrowHeight="20dp"
        app:bb_arrowWidth="20dp"
        app:bb_borderColor="@android:color/white"
        app:bb_borderWidth="3dp"
        app:bb_cornerRadius="30dp"
        app:bb_fillColor="@color/zxing_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textLecture"
        app:layout_constraintTop_toBottomOf="@+id/textLecture" />

    <ImageView
        android:id="@+id/bonhomme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textCalcul"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/bonhommebigsmile" />

    <ImageView
        android:id="@+id/bonhomme2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textCalcul"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/bonhommesmile" />

    <ImageButton
        android:id="@+id/BtnLecture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="logo lecture rapide"
        app:layout_constraintBottom_toTopOf="@+id/textLecture"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/logolecture2" />

        <TextView
            android:id="@+id/textLecture"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/learningcurvedashed"
            android:text="Lecture"
            android:textColor="@android:color/white"
            android:textSize="80sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/BtnLecture"
            app:layout_constraintStart_toStartOf="@+id/BtnLecture"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lecture" />

    <ImageButton
        android:id="@+id/BtnCalcul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="logo calcul rapide"
        android:cropToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/textCalcul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/logocalcul2" />

        <TextView
            android:id="@+id/textCalcul"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/learningcurvedashed"
            android:text="Calcul"
            android:textColor="@android:color/white"
            android:textSize="80sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/BtnCalcul"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/BtnCalcul"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Calcul" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
