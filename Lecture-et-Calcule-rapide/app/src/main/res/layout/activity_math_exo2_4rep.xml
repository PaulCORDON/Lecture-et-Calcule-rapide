<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ardoise"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/R3"
        style="@style/RbButton.Inverse.Rounded.Black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="10"
        android:layout_marginBottom="92dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="4"
        android:text="rep3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/ReponseEleve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="12"
        android:layout_row="0"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="433dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/operande1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353" />


        <TextView
            android:id="@+id/Operateur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@android:color/white"
            android:textSize="24sp" />


    <Button
        android:id="@+id/R4"
        style="@style/RbButton.Inverse.Rounded.Black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="12"
        android:layout_marginBottom="92dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="4"
        android:text="rep4"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/R1"
        style="@style/RbButton.Inverse.Rounded.Black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="10"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="2"
        android:text="rep1"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/R3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/operande1" />

    <Button
        android:id="@+id/R2"
        style="@style/RbButton.Inverse.Rounded.Black"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="12"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_row="2"
        android:text="rep2"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/R4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/operande1" />



</android.support.constraint.ConstraintLayout>